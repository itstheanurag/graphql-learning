{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["ES2023"],
    "target": "ES2023",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
